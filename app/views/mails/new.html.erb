
<!-- お問い合わせ画面の箱 -->
<div class="mails_new_box">

	<!-- お問い合わせのタイトルの行 -->
	<div class="mails_new_line_title">
		<h1>お問い合わせ</h1>
	</div>
	<!-- お問い合わせのタイトルの行fin -->


	<!-- フォーム -->
	<%= form_for(@mail) do |f| %>

		<!-- お名前、件名、メアド、内容の箱 -->
		<div class="mails_new_form_box">

			<!-- お名前の表示 -->
			<div class="mails_new_line">
				<p>お名前</p>
			</div>
			<!-- お名前の表示fin -->

			<!-- お名前のフォーム -->
			<%= f.text_field :name, class:"mails_new_line_form" %>
			<!-- お名前のフォームfin -->


			<!-- 件名の表示 -->
			<div class="mails_new_line">
				<p>件名</p>
			</div>
			<!-- 件名の表示fin -->

			<!-- 件名のフォーム -->
			<%= f.text_field :subject, class:"mails_new_line_form" %>
			<!-- 件名のフォームfin -->


			<!-- メールアドレスの表示 -->
			<div class="mails_new_line">
				<p>メールアドレス</p>
			</div>
			<!-- メールアドレスの表示fin -->

			<!-- メールアドレスのフォーム -->
			<%= f.text_field :email, class:"mails_new_line_form" %>
			<!-- メールアドレスのフォームfin -->


			<!-- お問い合わせ内容の表示 -->
			<div class="mails_new_line">
				<p>お問い合わせ内容</p>
			</div>
			<!-- お問い合わせ内容の表示fin -->

			<!-- お問い合わせ内容のフォーム -->
			<%= f.text_area :content, class:"mails_new_line_form_area" %>
			<!-- お問い合わせ内容のフォームfin -->

			<div class="mails_new_line_submit_position">
			<%= f.submit "送信する", class:"mails_new_line_submit" %>
			</div>

		</div>
		<!-- お名前、件名、メアド、内容の箱fin -->

	<% end %>
	<!-- フォームfin -->

</div>
<!-- お問い合わせ画面の箱fin -->
<style>
.mails_new_box{
	height: 800px;
	margin-top: 100px;
}

.user_body{
	height:1000px;
}
</style>